<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<excludes>
        <pattern>index</pattern>
    </excludes> 
	
	<page-parsers>
		<parser default="true" class="com.opensymphony.module.sitemesh.parser.HTMLPageParser" />
		<parser content-type="text/html" class="com.opensymphony.module.sitemesh.parser.HTMLPageParser" />
		<parser content-type="text/html;charset=UTF-8" class="com.opensymphony.module.sitemesh.parser.HTMLPageParser" />
	</page-parsers>
	
	<decorator name="basic-theme" page="/jsp/decorators/basic-theme.jsp">
		<pattern>/*</pattern>
	</decorator>
	
	<excludes>  
       <pattern>/jsp/decorators/*</pattern>
       <pattern>/PunchCard</pattern>
       <pattern>/inc/*</pattern>
       <pattern>/StdProfileEdit</pattern>
       <pattern>/PubEnroll</pattern>
	</excludes>
</decorators>